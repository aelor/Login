<h1>New Project</h1>

<%= form_for([@client, @project]) do |f| %>
   <% @project.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
   <% end %>
  
  <p>
    <%= f.label :project_name %><br />
    <%= f.text_field :project_name %>
  </p>
  <%= f.hidden_field :client_name, :value => @client.client_name %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', client_projects_path(@client) %>