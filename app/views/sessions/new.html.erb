<%= stylesheet_link_tag "posts.css.scss" %>
<div>
	<% if flash[:status] == FALSE%>
	<p><%= flash[:alert] %></p>
	<% end %>
</div>
<br />
<br /><br /><br /><br /><br /><br /><br />
<%= form_for(:session, :url => sessions_path, html: {:class => "login-form"}) do |f|%>
<div class="header" >
	<h1>Login Form</h1>
	<span>Fill out the login form below to access the Quality Assurance release note control panel.</span>
</div>
<div class="content">

	<%= f.label :email %>
	<%= f.text_field :email, class: 'input username' %>
	<div class="user-icon"></div>

<br /><br />

	<%= f.label :password  %>
	<%= f.password_field :password, class: 'input username' %>
	<div class="pass-icon"></div>

</div>
<div class="footer">
	<%= f.submit 'Login', class: 'button' %>
	<%= link_to "Register", register_path, class: 'register' %>
	<!--<input type="submit" name="submit" value="Register" class="register" />-->
</div>
<% end %>
