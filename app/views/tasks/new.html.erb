	<div class="demo_left_part">
		<div style="padding-bottom: 200px; padding-top: 100px;">

			<h1>New Task</h1>
				
				<%= form_for([@client, @project, @task]) do |f| %>
				   <% @task.errors.full_messages.each do |msg| %>
				      <p><%= msg %></p>
				   <% end %>
				  <table>
				  	
						  
						   <tr> <td><%= f.label :task_name %></td>
						        <td><%= f.text_field :task_name %></td>
					       </tr>
						   <tr> <td><%= f.label :task_description %></td>
						        <td><%= f.text_field :task_description %></td>
						   </tr>
						  
						  
						   <%= f.hidden_field :client_id, :value => @client.id %>
						   <%= f.hidden_field :project_id, :value => @project.id %>
						   <tr><td>Assign task to :</td> 
						   	   <td><%= collection_select(:task, :user_id, User.all, :id, :email) %></td>
						   </tr>
						   <tr><td>Client name : </td>
						   	   <td><%= @client.client_name %></td>
						   </tr>
						   <tr><td>Project name :</td>
						   	   <td><%= @project.project_name %></td>
						   </tr>
						   				  
			      </table>
			      <div style="padding-top: 50px;">
			      <%= f.submit "Create task",:class=>"button" %>	
				<% end %>
                  			
				<%= link_to 'Back', client_project_tasks_path(@client,@project) , :class=>"button"%></div>

