		<h1>Edit password/permissions for a user</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <br />
  <% if (current_user.has_role? :admin)%>
     <% if (!@user.has_role? :admin)%>
            <%= link_to 'Promote to admin', add_admin_role_user_path(@user), :class=>"button pill" %>
            <% else %>
        
            <%= link_to 'Remove admin permissions', remove_admin_role_user_path(@user), :class=>"button pill danger" %>
     <% end %>
          
     <% if (!@user.has_role? :rm)%>
            <%= link_to 'Promote to RM', add_rm_role_user_path(@user), :class=>"button pill" %>
            <% else %>
        
            <%= link_to 'Remove RM permissions', remove_rm_role_user_path(@user), :class=>"button pill danger" %>
     <% end %>
          
    <% if (!@user.has_role? :quality)%>
            <%= link_to 'Promote to Quality manager', add_quality_role_user_path(@user), :class=>"button pill" %>
            <% else %>
        
            <%= link_to 'Remove QM permissions', remove_quality_role_user_path(@user), :class=>"button pill danger" %>
     <% end %>
  </p>
 <% end %>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit 'Submit', class: 'button' %>
<% end %>
        <br /><br /><br /><br /><br /><br />	
